	<div class="row">
		<div class="column"> 
		
			<form>
				<legend class="bold">Add an Attendee</legend>
				<label for="tripID">Trip ID: </label><br><input type="text" name="tripID"><br>
				<label for="studentID">Student ID: </label><br><input type="text" name="studentID"><br>
				<label for="adultID">Chaperone ID: </label><br><input type="text" name="adultID"><br>
